<script>
	$( function() {
	  // init Isotope
	  var $container = $('.isotope').imagesLoaded(function(){
	    $container.isotope({
	      itemSelector: '.element-item',
	      columnWidth: '.grid-sizer',
	    });
	  });
	})

	$(window).scroll(function(){
		var window_height = $(window).height();
		var window_pos = $(window).scrollTop() + window_height;
		var tasks_pos = $('#tasks-anchor').offset().top;

		if( window_pos > tasks_pos ){
			$('.info.tasks').addClass('active');
			$('.box-image.tasks').addClass('active');
		}

	})
</script>
